<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         bootstrap="tests/bootstrap.php">
    <testsuites>
        <testsuite name="Mailcode">
            <directory suffix=".php">./tests/testsuites/Mailcode</directory>
        </testsuite>
        <testsuite name="Parser">
            <directory suffix=".php">./tests/testsuites/Parser</directory>
        </testsuite>
        <testsuite name="Commands">
            <directory suffix=".php">./tests/testsuites/Commands</directory>
        </testsuite>
    </testsuites>
</phpunit>
